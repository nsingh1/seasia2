<html>
<body>

<!--main-container start-->
<div class="main-container">
  <!--start-new-project start-->
  <div class="start-new-project">
  <h2>Start a New Project</h2>
  <div class="start-new-prj-form">
 <div class="left"><img src="/images/start-new-project-tp-bg.png" alt="" /></div>
  <div class="stnp-mid-bg">
  
<%= form_for(@project,:validate => true) do |f| %>
<table width="100%" border="0" cellspacing="0" cellpadding="0">
 <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <tr>
    <td class="pad-rt-6" width="26%" align="right"><%= f.label :project_name %></td>
    <td width="30%">  <%= f.text_field :project_name, :placeholder => "maximum length 18 characters" ,:maxlength => 18, :class =>"input2" %></td>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
 <tr>
    <td class="pad-rt-6" align="right"> <%= f.label :company_name %></td>
    <td> <%= f.text_field :company_name, :placeholder => "maximum length 23 characters",:maxlength => 23 ,:class=>"input2" %></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
  <tr>
 
    <td colspan="2"><%= f.submit  "Create Project", :class=> "creat-project-button" %></td>
 
    </tr>
</table>

 </div>
  </div>
  </div>
  <!--start-new-project end--> 
</div>

<!--main-container end-->
<% end %>


</body>
</html>
